// -*- mode: jsonc -*-
// Waybar konfigurace â€“ jednoduÅ¡Å¡Ã­ verze bez Å¡ipek
{
    "layer": "top",
    "position": "top",
    "height": 10,
    "spacing": 15, // VÄ›tÅ¡Ã­ mezery mezi moduly

    // --- LevÃ¡ ÄÃ¡st panelu ---
    "modules-left": [
        "hyprland/workspaces"
    ],

    // --- ProstÅ™ednÃ­ ÄÃ¡st ---
    "modules-center": [
        "mpris"
    ],

    // --- PravÃ¡ ÄÃ¡st panelu ---
    "modules-right": [
        "pulseaudio",
        "memory",
        "cpu",
        "battery",
        "disk",
        "clock",
        "custom/updates",
        "tray"
    ],

    // --- FunkÄnÃ­ moduly ---

    "hyprland/workspaces": {
        "disable-scroll": true,
        "show-empty": false,
        "active-only": false,
        "sort-by-number": true,
        "format": "{name}",
        "on-click": "activate"
    },

    "mpris": {
        "format": "{player_icon} {title} - {artist}",
        "format-paused": "{player_icon} {title} - {artist} (Paused)",
        "format-stopped": "No media playing",
        "player-icons": {
            "spotify": "ï†¼",
            "default": "â–¶"
        },
        "on-click": "playerctl play-pause",
        "on-click-right": "playerctl next",
        "on-click-middle": "playerctl previous"
    },

    "clock": {
        "format": "{:%H:%M %Z}",
        "tooltip-format": "{:%A, %d. %B %Y}",
        "interval": 1
    },

    "custom/updates": {
        "exec": "checkupdates | wc -l",
        "interval": 3600,
        "format": "ğŸ“¦ {output}",
        "format-alt": "ğŸ“¦ 0",
        "tooltip-format": "Updates:\\n{exec:checkupdates}",
        "on-click": "wezterm -e sh -c 'checkupdates; echo -e \"\\nStiskni Enter pro ukonÄenÃ­\"; read -r'",
        "signal": 8
    },

    "pulseaudio": {
        "format": "{icon} {volume:2}%",
        "format-bluetooth": "{icon}  {volume}%ïŠ”",
        "format-muted": "MUTE",
        "format-icons": {
            "headphones": "ï€¥",
            "default": ["ï€§", "ï€¨"]
        },
        "scroll-step": 5,
        "on-click": "pamixer -t",
        "on-click-right": "pavucontrol"
    },

    "memory": {
        "interval": 5,
        "format": "Mem {percentage:2}%"
    },

    "cpu": {
        "interval": 5,
        "format": "CPU {usage:2}%"
    },

    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
    },

    "disk": {
        "interval": 5,
        "format": "Disk {percentage_used:2}%",
        "path": "/"
    },

    "tray": {
        "icon-size": 20
    }
}
